@using Nop.Services.Common
@using Nop.Services
@using Nop.Core
@using Nop.Web.Framework.UI
@using Nop.Plugin.Widgets.JCarousel.Domain
@using Nop.Plugin.Widgets.JCarousel.Models.Configuration
@model JCarouselModel
@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Plugins.Widgets.JCarousel.Hint").Text;
    NopHtml.SetActiveMenuItemSystemName("Manage JCarousel");
}

<link rel="stylesheet" href="~/Plugins/Widgets.JCarousel/Content/css/custom.css" />

<form asp-controller="JCarousel" asp-action="Edit" method="post" id="jcarousel-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugins.Widgets.JCarousel.EditJcarouselDetails")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Plugins.Widgets.JCarousel.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Plugins.Widgets.JCarousel.Saved")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Plugins.Widgets.JCarousel.SaveContinue")
            </button>
        </div>
    </div>

    @(await Html.PartialAsync("~/Plugins/Widgets.JCarousel/Views/Admin/_EditInfo.cshtml", Model))
    @(await Html.PartialAsync("~/Plugins/Widgets.JCarousel/Views/Admin/_EditProducts.cshtml", Model))
    @(await Html.PartialAsync("~/Plugins/Widgets.JCarousel/Views/Admin/_EditWidgets.cshtml", Model))

</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="jcarousel-delete" />

